             xmlns:local="clr-namespace:IntroToXam"
             x:Class="IntroToXam.MainPage">

    <StackLayout  HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Your entry: " TextColor="Blue" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Entry Placeholder="Type anything..." HorizontalOptions="Center" VerticalOptions="Center"/>
